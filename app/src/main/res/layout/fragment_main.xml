<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ingokodba.dragnav.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:minHeight="50dp"
            tools:text="Notification"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/selected_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextShadowStyle"
            android:singleLine="true"
            android:textSize="50sp"
            android:text="@string/loading"
            android:textColor="@color/white"/>
        <com.ingokodba.dragnav.CircleView
            android:id="@+id/circleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.ingokodba.dragnav.BottomMenuView
        android:id="@+id/bottomMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"/>

</FrameLayout>