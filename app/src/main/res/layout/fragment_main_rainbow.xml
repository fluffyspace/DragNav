<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ingokodba.dragnav.MainFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ingokodba.dragnav.Rainbow
            android:id="@+id/circleview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sliders"/>
        <ImageButton
            android:id="@+id/sliders"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_baseline_close_50"
            android:background="@color/white_semi_transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/detectSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="0"
            android:valueTo="200"
            app:layout_constraintTop_toBottomOf="@id/sliders"
            android:visibility="gone"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="0"
            android:valueTo="1"
            app:layout_constraintTop_toBottomOf="@id/detectSize"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/label_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/slider_app_spacing"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/distance"
            android:visibility="gone"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="0"
            android:valueTo="1"
            app:layout_constraintTop_toBottomOf="@id/label_step"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/label_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/slider_circle_size"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/step"
            android:visibility="gone"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="0.5"
            android:valueTo="3"
            app:layout_constraintTop_toBottomOf="@id/label_radius"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/label_arcRotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/slider_arc_position"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/radius"
            android:visibility="gone"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/arcRotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="-1.57"
            android:valueTo="1.57"
            app:layout_constraintTop_toBottomOf="@id/label_arcRotation"
            android:visibility="gone"/>
        <CheckBox
            android:id="@+id/onlyfavoriteapps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/show_only_favorites"
            app:layout_constraintTop_toBottomOf="@id/arcRotation"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>