<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Adding a folder"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Folder name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/popup_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/pick_folder_color"
        style="@style/MojButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="pick a folder color"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/popup_folder_cancel"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/popup_folder_submit"
            style="@style/MojButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/add_folder"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/popup_folder_cancel"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/popup_folder_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/cancel"
        app:layout_constraintLeft_toRightOf="@id/popup_folder_submit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/popup_folder_submit"
        android:layout_marginLeft="5dp"
        style="@style/MojButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>